 <div class="container">
  <!-- Contact Section -->
   <section class="ptb-sm-80">
       <div class="container">
           <div class="row">
               <div class="col-md-6 col-md-offset-3 text-center">
                   <h3>Contact Me</h3>
                   <p class="lead">Hi there, if you'd like to comment on my work, offer me a job or just say hi, please fill out the form below and I will do my best to get back to you. Thanks.</p>
               </div>
           </div>
           <div class="spacer-45"></div>
           <div class="row">
               <div class="col-md-6 col-md-offset-3">
                   <!-- Contact FORM -->
                   <%= form_for(@contact, :html => {:class => 'contact-form', :id => 'contact', :role => 'form'}) do |f| %>

                       <!-- IF MAIL SENT SUCCESSFULLY -->
                       <h6 class="successContent">
                           <i class="fa fa-check left" style="color: #5cb45d;"></i>Your message has been sent successfully.
                       </h6>
                       <!-- END IF MAIL SENT SUCCESSFULLY -->

                       <!-- MAIL SENDING UNSUCCESSFULL -->
                       <h6 class="errorContent">
                           <i class="fa fa-exclamation-circle left" style="color: #e1534f;"></i>There was a problem validating the form please check!
                       </h6>
                       <!-- END MAIL SENDING UNSUCCESSFULL -->

                       <div class="form-field-wrapper">
                           <%= f.text_field :name, :class => 'input-sm form-full', :id => 'form-name', :type => 'text', :placeholder => "Your Name" %>
                       </div>

                       <div class="form-field-wrapper">
                           <%= f.text_field :email, :class => 'input-sm form-full', :id => 'form-email', :type => 'email', :placeholder => "Email" %>
                       </div>

                       <div class="form-field-wrapper">
                           <%= f.text_area :message, :class => 'input-sm form-full', :id => 'form-message', :rows => 7, :placeholder => "Your Message" %>
                       </div>


                       <button class="btn btn-md btn-black form-full" type="submit" id="form-submit" name="submit">Send Message</button>
                   <% end %>
                   <!-- END Contact FORM -->
               </div>
           </div>
       </div>
   </section>
   <!-- Contact Section -->
 </div>